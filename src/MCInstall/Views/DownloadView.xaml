<UserControl
    x:Class="MCInstall.Views.DownloadView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="clr-namespace:MCInstall.Behaviours"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="350"
    d:DesignHeight="450"
    mc:Ignorable="d">

    <StackPanel>

        <TextBlock Text="코드" />
        <TextBox
            b:KeyboardHelper.IsBlockSpacebar="True"
            Style="{StaticResource CodeTextBox}"
            Text="{Binding Code}" />

        <Button
            Width="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=Width}"
            Margin="{StaticResource ControlTopMargin}"
            Padding="15"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="{StaticResource Color1Brush}"
            BorderThickness="1"
            Command="{Binding InstallCommand}"
            Content="설치"
            FontSize="{StaticResource FontSizeRegular}"
            Foreground="{StaticResource ForegroundLightBrush}" />

        <CheckBox
            Margin="{StaticResource ControlTopMargin}"
            VerticalContentAlignment="Center"
            Content="설치 시 마인크래프트 초기화"
            IsChecked="{Binding IsInitMinecraft}" />

    </StackPanel>
</UserControl>