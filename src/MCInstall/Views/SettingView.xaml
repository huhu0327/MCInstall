<UserControl
    x:Class="MCInstall.Views.SettingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviour="clr-namespace:MCInstall.Behaviours"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="350"
    d:DesignHeight="450"
    mc:Ignorable="d">

    <StackPanel>
        <Button
            Background="{StaticResource Color1Brush}"
            Command="{Binding SyncGoogleCommand}"
            Content="&#xf132;"
            Foreground="{StaticResource ForegroundLightBrush}">
            <!--<TextBlock Text="구글 연동" />-->
        </Button>
        <TextBlock Margin="{StaticResource ControlTopMargin}" Text=".minecraft 폴더 위치" />
        <StackPanel Orientation="Horizontal">
            <TextBox
                x:Name="test"
                Width="310"
                VerticalContentAlignment="Center"
                Text="{Binding MinecraftDirectory}"
                TextAlignment="Left" />
            <Button
                Width="35"
                Margin="{StaticResource ControlLeftMargin}"
                Background="{StaticResource Color1Brush}"
                BorderThickness="1"
                Command="{Binding PositionCommand}"
                Content="..." />
        </StackPanel>

    </StackPanel>

</UserControl>