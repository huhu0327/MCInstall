<Window
    x:Class="MCInstall.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="{Binding Title}"
    Width="350"
    Height="525"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">
    <Border
        Margin="20"
        Background="White"
        CornerRadius="25">
        <Border.Effect>
            <DropShadowEffect
                BlurRadius="25"
                Direction="-90"
                ShadowDepth="3"
                Color="Black" />
        </Border.Effect>

        <Grid Margin="10">
            <TextBox
                Width="200"
                Height="40"
                Style="{StaticResource InputText}" />

            <Button
                Width="100"
                Height="30"
                Margin="0,100,0,0"
                Content="헤이" />
        </Grid>
    </Border>
</Window>
