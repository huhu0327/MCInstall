<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <system:Double x:Key="FontSizeSmall">14</system:Double>
    <system:Double x:Key="FontSizeRegular">20</system:Double>
    <system:Double x:Key="FontSizeLarge">32</system:Double>

    <Thickness
        x:Key="ControlHorizontalMargin"
        Bottom="0"
        Left="5"
        Right="0"
        Top="0" />

    <Thickness
        x:Key="ControlVerticalMargin"
        Bottom="0"
        Left="0"
        Right="0"
        Top="20" />

</ResourceDictionary>