<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <FontFamily x:Key="KoPubLight">/MCInstall;component/Assets/Fonts/#KoPubWorld돋움체 Light</FontFamily>
    <FontFamily x:Key="KoPubMedium">/MCInstall;component/Assets/Fonts/#KoPubWorld돋움체 Medium</FontFamily>
    <FontFamily x:Key="KoPubBold">/MCInstall;component/Assets/Fonts/#KoPubWorld돋움체 Bold</FontFamily>
    
    <FontFamily x:Key="FontAwesome">/MCInstall;component/Assets/Fonts/#FontAwesome</FontFamily>
    
    <Style x:Key="IconStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="FontFamily" Value="{StaticResource FontAwesome}"></Setter>
        <Setter Property="FontSize" Value="12"></Setter>
        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
    </Style>

</ResourceDictionary>